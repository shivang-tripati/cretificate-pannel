{
  "compilerOptions": {
    "target": "ES6",                         // You can keep this as is
    "module": "commonjs",                    // CommonJS is fine for Node.js
    "outDir": "./dist",                      // Specify output directory for compiled files
    "rootDir": "./src",                      // Specify root directory for source files
    "strict": true,                          // Enable strict type-checking options
    "esModuleInterop": true,                 // Enables emit interoperability between CommonJS and ES Modules
    "skipLibCheck": true,                    // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true,// Ensures that casing is consistent
    "resolveJsonModule": true,               // Allows importing JSON files
    "typeRoots": ["./node_modules/@types", "./src/types"], // Custom type definitions
    "types": ["node"],                       // Explicitly include Node.js types
    "baseUrl": "./src"                       // Set base URL for module resolution
  },
  "include": ["src/**/*.ts"],                 // Include all TypeScript files in src
  "exclude": ["node_modules", "**/*.spec.ts"] // Exclude node_modules and test files
}
